# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_game_builder
REDIS_URL=redis://localhost:6379

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_S3_BUCKET=ai-game-builder-assets
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
AWS_REGION=us-east-1

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# AI Service Keys (Users will provide their own)
DEFAULT_OPENAI_API_KEY=sk-your-openai-key-here
DEFAULT_OPENROUTER_API_KEY=sk-or-your-openrouter-key-here
DEFAULT_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-here

# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000
CLIENT_BASE_URL=http://localhost:19006

# Feature Flags
ENABLE_MULTIPLAYER=true
ENABLE_CONSOLE_EXPORT=false
ENABLE_COMMUNITY_FEATURES=false
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_PROJECT_SIZE_MB=1000